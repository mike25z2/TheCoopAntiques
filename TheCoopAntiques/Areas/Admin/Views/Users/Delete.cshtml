@using Microsoft.EntityFrameworkCore.Infrastructure
@using TheCoopAntiques.Extensions
@model TheCoopAntiques.Models.ViewModel.ApplicationUserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-danger">Delete User</h2>
<br />
<form method="post" asp-action="Delete">
    <div class="row">
        <div class="p-4 border rounded col-5">
            <input type="hidden" asp-for="@Model.ApplicationUsers.Id" />
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.FirstName"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.FirstName" readonly class="form-control" />
                </div>
                </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.LastName"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.LastName" readonly class="form-control" />
                </div>
                </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.PhoneNumber"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.PhoneNumber" readonly class="form-control" />
                </div>
                </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.Email"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.Email" readonly class="form-control" />
                </div>
                </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.DealerId"></label>
                </div>
                <div class="col-7">
                    <select asp-for="@Model.ApplicationUsers.DealerId" asp-items="@Model.Dealers.ToSelectListItem(Model.ApplicationUsers.DealerId)" disabled class="form-control"></select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-primary btn-block">Return to User List</a>
                </div>
                <div class="col-6">
                    <input type="submit" class="btn btn-danger btn-block" asp-route-id="@Model.ApplicationUsers.Id" value="Delete" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-1"></div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}