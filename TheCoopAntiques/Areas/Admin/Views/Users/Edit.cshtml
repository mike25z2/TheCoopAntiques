@using Microsoft.EntityFrameworkCore.Infrastructure
@using TheCoopAntiques.Extensions
@model TheCoopAntiques.Models.ViewModel.ApplicationUserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Edit User</h2>
<br />
<form method="post" asp-action="Edit">
    <div class="row">
        <div class="p-4 border rounded col-5">
            <input type="hidden" asp-for="@Model.ApplicationUsers.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.FirstName"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.FirstName" class="form-control" />
                </div>
                <span asp-validation-for="@Model.ApplicationUsers.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.LastName"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.LastName" class="form-control" />
                </div>
                <span asp-validation-for="@Model.ApplicationUsers.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.PhoneNumber"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="@Model.ApplicationUsers.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.Email"></label>
                </div>
                <div class="col-7">
                    <input asp-for="@Model.ApplicationUsers.Email" readonly class="form-control" />
                </div>
                <span asp-validation-for="@Model.ApplicationUsers.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label asp-for="@Model.ApplicationUsers.DealerId"></label>
                </div>
                <div class="col-7">
                    <select asp-for="@Model.ApplicationUsers.DealerId" asp-items="@Model.Dealers.ToSelectListItem(Model.ApplicationUsers.DealerId)" class="form-control"></select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-primary btn-block">Return to User List</a>
                </div>
                <div class="col-6">
                    <input type="submit" class="btn btn-success btn-block" asp-route-id="@Model.ApplicationUsers.Id" value="Update" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-1"></div>
   
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
