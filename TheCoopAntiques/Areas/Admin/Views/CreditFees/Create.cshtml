@model TheCoopAntiques.Models.CreditFees
@{
    ViewData["Title"] = "Create Credit Fee";
}
<br />
<h2 class="text-info">Add New Credit Fee Amount</h2>
<br />
<form method="post" asp-action="Create">
    <div class="p-4 border rounded col-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Amount">Percentage</label>
            </div>
            <div class="col-3">
                <input asp-for="Amount" class="form-control" />
            </div>
            <div class="col-1" style="font-size:1.5em;">
                %
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="StartDate">Effective Date</label>
            </div>
            <div class="col-4">
                <input type="text" asp-for="StartDate" id="datepicker" class="form-control" />
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Credit Fee List</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success btn-block" value="Create" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(function() {
            $("#datepicker").datepicker({
                minDate: "-1m"
            });
        });
    </script>
}
