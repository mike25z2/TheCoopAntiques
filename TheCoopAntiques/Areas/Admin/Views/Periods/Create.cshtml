@model TheCoopAntiques.Models.Periods
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create Period</h2>
<br />
<form method="post" asp-action="Create">
    <div class="p-4 border rounded col-6">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.StartDate"></label>
            </div>
            <div class="col-8">
                <input type="text" id="datepicker" asp-for="@Model.StartDate" class="form-control" />
            </div>
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.EndDate"></label>
            </div>
            <div class="col-8">
                <input type="text" id="datepicker2" asp-for="@Model.EndDate" class="form-control" />
            </div>
            <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="@Model.PeriodType"></label>
            </div>
            <div class="col-8 ">
                <select asp-for="@Model.PeriodType" class="form-control">
                    <option value="M" selected>Month</option>
                    <option value ="W">Week</option>
                    <option value="Y">Year</option>
                </select>
            </div>
            <span asp-validation-for="@Model.PeriodType" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Period Maintenance</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success btn-block" value="Create" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(function () {
            $("#datepicker").datepicker({
                 
            });
        });
        $(function () {
            $("#datepicker2").datepicker({
                
            });
        });
    </script>
}
