@model TheCoopAntiques.Models.TransactionTypes
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Disable Transaction Type</h2>
<br />
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded col-6">
    <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <input asp-for="Description" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Transaction List</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-danger btn-block" asp-route-id="@Model.Id" value="Delete" />
            </div>
        </div>
    </div>
</form>