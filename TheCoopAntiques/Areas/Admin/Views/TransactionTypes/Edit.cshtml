@model TheCoopAntiques.Models.TransactionTypes
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit Transaction Type</h2>
<br />
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded col-6">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <input asp-for="Description" class="form-control" />
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Disabled"></label>
            </div>
            <div class="col-1">
                <input asp-for="Disabled" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Transaction List</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success btn-block" asp-route-id="@Model.Id" value="Update" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
