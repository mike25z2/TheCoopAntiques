@model TheCoopAntiques.Models.TransactionTypes
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">View Transaction Type</h2>
<br />

    <div class="p-4 border rounded col-6">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" readonly class="form-control" />
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description"></label>
            </div>
            <div class="col-8">
                <input asp-for="Description" readonly class="form-control" />
            </div>
            
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Transaction List</a>
            </div>
            <div class="col-6">
                <a asp-action="Edit" class="btn btn-success btn-block" asp-route-id="@Model.Id">Edit</a>
            </div>
        </div>
    </div>
