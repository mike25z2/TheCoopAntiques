@model TheCoopAntiques.Models.Dealers
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Delete Dealer</h2>
<br />
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded col-12">
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <label asp-for="Disabled"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="Name" readonly class="form-control" />
                
            </div>
            <div class="col-1">
                <input type="checkbox" asp-for="Disabled" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-6">
                <label asp-for="LastName"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="FirstName" readonly class="form-control" />
             
            </div>
            <div class="col-6">
                <input asp-for="LastName" readonly class="form-control" />
              
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address1"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input asp-for="Address1" readonly class="form-control">
               
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address2"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input asp-for="Address2" readonly class="form-control">
              
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="City"></label>
            </div>
            <div class="col-3">
                <label asp-for="State"></label>
            </div>
            <div class="col-3">
                <label asp-for="Zip"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="City" readonly class="form-control" />
               
            </div>
            <div class="col-3">
                <input asp-for="State" readonly class="form-control" />
               
            </div>
            <div class="col-3">
                <input asp-for="Zip" readonly class="form-control" />
               
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-6">
                <label asp-for="Email"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="PhoneNumber" readonly class="form-control" />
              
            </div>
            <div class="col-6">
                <input asp-for="Email" readonly class="form-control" />
              
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Maintain Dealers</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-danger btn-block" asp-route-id="@Model.Id" value="Delete" />
            </div>
        </div>
    </div>
</form>

