@model TheCoopAntiques.Models.Dealers
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Edit Dealer</h2>
<br />
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded col-12">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <label asp-for="Disabled"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-1">
                <input type="checkbox" asp-for="Disabled" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-6">
                <label asp-for="LastName"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-6">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address1"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input asp-for="Address1" class="form-control">
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <label asp-for="Address2"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <input asp-for="Address2" class="form-control">
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="City"></label>
            </div>
            <div class="col-3">
                <label asp-for="State"></label>
            </div>
            <div class="col-3">
                <label asp-for="Zip"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-3">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col-3">
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-6">
                <label asp-for="Email"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="text" asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-6">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-6">
                <a asp-action="Index" class="btn btn-primary btn-block">Return to Maintain Dealers</a>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-success btn-block" asp-route-id="@Model.Id" value="Update" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}